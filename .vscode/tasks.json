{
  "tasks": [
    // These tasks are used to build the project
    {
      "command": "make clean; make -j8",
      "group": {
        "isDefault": true,
        "kind": "build"
      },
      "dependsOn": [
        "build_libs"
      ],
      "label": "clean_build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "type": "shell"
    },
    {
      "command": "make clean; DEBUG=1 make -j8",
      "dependsOn": [
        "build_libs"
      ],
      "label": "clean_build_debug",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "type": "shell"
    },
    //////////////////////////////////////////////////////
    // Combined tasks for clean building and programming
    {
      "command": "make program",
      "dependsOn": [
        "clean_build"
      ],
      "label": "clean_build_and_program",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "type": "shell"
    },
    {
      "command": "make program-dfu",
      "dependsOn": [
        "clean_build"
      ],
      "label": "clean_build_and_program_dfu",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "type": "shell"
    },
    //////////////////////////////////////////////////////
    // These tasks are used to program the board using an already built binary
    {
      "command": "make program-dfu",
      "label": "program-dfu",
      "problemMatcher": [],
      "type": "shell"
    },
    {
      "command": "make program",
      "label": "program",
      "problemMatcher": [],
      "type": "shell"
    },
    //////////////////////////////////////////////////////
    // This task builds the libraries libDaisy and daisySP
    {
      "label": "build_libs",
      "dependsOn": [
        "build_libdaisy",
        "build_daisysp"
      ],
      "problemMatcher": [
        "$gcc"
      ],
    },
    {
      "command": "make -j8",

      "label": "build_libdaisy",
      "options": {
        "cwd": "${workspaceFolder}/lib/libDaisy/"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "type": "shell"
    },
    {
      "command": "make -j8",
      "label": "build_daisysp",
      "options": {
        "cwd": "${workspaceFolder}/lib/daisySP/"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "type": "shell"
    },
    //////////////////////////////////////////////////////
  ],
  "version": "2.0.0"
}
