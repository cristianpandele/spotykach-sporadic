{
  "configurations": [
    {
      "name": "Launch Debug (no rebuild)",
      "configFiles": [
        "interface/stlink.cfg",
        "target/stm32h7x.cfg"
      ],
      "cwd": "${workspaceRoot}",
      "debuggerArgs": [
        "-d",
        "${workspaceRoot}"
      ],
      "executable": "${workspaceRoot}/build/spotykach_hwtest.elf",
      "interface": "swd",
      "openOCDLaunchCommands": [
        "init",
        "reset init",
        "gdb_breakpoint_override hard"
      ],
      "preRestartCommands": [
        "load",
        "enable breakpoint",
        "monitor reset"
      ],
      "request": "launch",
      "runToEntryPoint": "main",
      "servertype": "openocd",
      "showDevDebugOutput": "none",
      "svdFile": "${workspaceRoot}/.vscode/STM32H750x.svd",
      "type": "cortex-debug",
    },
    {
      "name": "Build and Debug (internal flash only)",
      "configFiles": [
        "interface/stlink.cfg",
        "target/stm32h7x.cfg"
      ],
      "cwd": "${workspaceFolder}",
      "debuggerArgs": [
        "-d",
        "${workspaceRoot}"
      ],
      "executable": "${workspaceRoot}/build/spotykach_hwtest.elf",
      "interface": "swd",
      "openOCDLaunchCommands": [
        "init",
        "reset init",
      ],
      "preLaunchTask": "clean_build_debug",
      "preRestartCommands": [
        "load",
        "enable breakpoint",
        "monitor reset"
      ],
      "request": "launch",
      "runToEntryPoint": "main",
      "servertype": "openocd",
      "showDevDebugOutput": "both",
      "svdFile": "${workspaceRoot}/.vscode/STM32H750x.svd",
      "type": "cortex-debug"
    },
    {
      "name": "Attach",
      "configFiles": [
        "interface/stlink.cfg",
        "target/stm32h7x.cfg"
      ],
      "cwd": "${workspaceRoot}",
      "debuggerArgs": [
        "-d",
        "${workspaceRoot}"
      ],
      "executable": "${workspaceRoot}/build/spotykach_hwtest.elf",
      "interface": "swd",
      "openOCDLaunchCommands": [
        "init",
        "reset init",
        "gdb_breakpoint_override hard"
      ],
      "preRestartCommands": [
        "enable breakpoint",
        "monitor reset"
      ],
      "request": "attach",
      // "runToEntryPoint": "main",
      "servertype": "openocd",
      "showDevDebugOutput": "both",
      "svdFile": "${workspaceRoot}/.vscode/STM32H750x.svd",
      "type": "cortex-debug"
    }
  ],
  "version": "0.2.0"
}
